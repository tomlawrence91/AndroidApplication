<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tom.majority.SignUp">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Avatar"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="73dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interests"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="247dp" />

    <EditText
        android:id="@+id/enterUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/profileUpdate"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="Submit"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="380dp" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        app:layout_constraintDimensionRatio="h,1:1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="155dp">

        <RadioGroup
            android:id="@+id/radioGroup1">
        <RadioButton
            android:id="@+id/avatar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Avatar5" />

        <RadioButton
            android:id="@+id/avatar6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Avatar6" />

        <RadioButton
            android:id="@+id/avatar7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Avatar7" />

        <RadioButton
            android:id="@+id/avatar8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Avatar8" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="65dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="90dp">

        <RadioButton
            android:id="@+id/avatar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Avatar1" />

        <RadioButton
            android:id="@+id/avatar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Avatar2" />

        <RadioButton
            android:id="@+id/avatar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Avatar3" />

        <RadioButton
            android:id="@+id/avatar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Avatar4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="31dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="299dp">

        <CheckBox
            android:id="@+id/topic6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Topic6" />

        <CheckBox
            android:id="@+id/topic7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Topic7" />

        <CheckBox
            android:id="@+id/topic8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Topic8" />

        <CheckBox
            android:id="@+id/topic9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Topic9" />

        <CheckBox
            android:id="@+id/topic10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Topic10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="31dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="264dp">

        <CheckBox
            android:id="@+id/topic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:text="Topic1" />

        <CheckBox
            android:id="@+id/topic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:text="Topic2" />

        <CheckBox
            android:id="@+id/topic3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:text="Topic3" />

        <CheckBox
            android:id="@+id/topic4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:text="Topic4" />

        <CheckBox
            android:id="@+id/topic5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:text="Topic5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.75" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
